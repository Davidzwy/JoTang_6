<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:id="@+id/denglu"
        android:layout_marginTop="50dp"
        android:src="@mipmap/denglu"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="Welcome Back"
        android:textColor="#8B56EA"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="70dp"
        android:orientation="vertical"
        android:paddingRight="70dp">

        <TextView
            android:id="@+id/tvname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="username"
            android:textColor="#dd9C27B0" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvname"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_rect_stroke"
            android:hint="请输入用户名"
            android:paddingLeft="10dp"
            android:textAllCaps="false"
            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:text="your password"
            android:layout_marginTop="15dp"
            android:textColor="#dd9C27B0"
            android:id="@+id/tvpwd1"/>

        <EditText
            android:id="@+id/password1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvpwd1"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_rect_stroke"
            android:hint="请输入密码"
            android:paddingLeft="10dp"
            android:password="true"
            android:textAllCaps="false"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:visibility="gone"
            android:id="@+id/checkcode"/>
        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:hint="请输入验证码"
            android:layout_marginLeft="50dp"
            android:id="@+id/mycode"/>
    </LinearLayout>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/click_change"
        android:text="登  陆"
        android:textSize="16sp"
        android:id="@+id/send"
        android:layout_marginTop="20dp"
        android:textColor="#dddddd"
        android:gravity="center"/>


</LinearLayout>